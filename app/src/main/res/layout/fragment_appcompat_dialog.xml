<?xml version="1.0" encoding="utf-8"?>
<ScrollView	xmlns:android="http://schemas.android.com/apk/res/android"
			   xmlns:app="http://schemas.android.com/apk/res-auto"
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:clickable="true"
			   android:background="#ffffff">
	<android.support.v7.widget.GridLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:orientation="horizontal"
				app:columnCount="2">
		<!-- row 0 -->
		<android.support.v7.widget.AppCompatTextView
			app:layout_column="0"
			android:text="android.app.AlertDialog"/>

		<android.support.v7.widget.AppCompatTextView
			app:layout_column="1"
			android:text="android.support.v7.AlertDialog"/>

		<!-- row 1 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialog"
			app:layout_column="0"
			android:text="show alert dialog" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialog"
			app:layout_column="1"
			android:text="show alert dialog" />

		<!-- row 2 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithP"
			app:layout_column="0"
			android:text="show alert dialog (with p button)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithP"
			app:layout_column="1"
			android:text="show alert dialog (with p button)" />

		<!-- row 3 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithNP"
			app:layout_column="0"
			android:text="show alert dialog (with n/p button)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithNP"
			app:layout_column="1"
			android:text="show alert dialog (with n/p button)" />

		<!-- row 4 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithNNP"
			app:layout_column="0"
			android:text="show alert dialog (with n/n/p button)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithNNP"
			app:layout_column="1"
			android:text="show alert dialog (with n/n/p button)" />

		<!-- row 5 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithView"
			app:layout_column="0"
			android:text="show alert dialog (with view)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithView"
			app:layout_column="1"
			android:text="show alert dialog (with view)" />

		<!-- row 6 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithItems"
			app:layout_column="0"
			android:text="show alert dialog (with items)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithItems"
			app:layout_column="1"
			android:text="show alert dialog (with items)" />

		<!-- row 7 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithSingleChoiceItems"
			app:layout_column="0"
			android:text="show alert dialog (with single choice items)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithSingleChoiceItems"
			app:layout_column="1"
			android:text="show alert dialog (with single choice items)" />

		<!-- row 8 -->
		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowDialogWithMultiChoiceItems"
			app:layout_column="0"
			android:text="show alert dialog (with multi choice items)" />

		<android.support.v7.widget.AppCompatButton
			android:id="@+id/btnShowAppCompatDialogWithMultiChoiceItems"
			app:layout_column="1"
			android:text="show alert dialog (with multi choice items)" />
	</android.support.v7.widget.GridLayout>
</ScrollView>