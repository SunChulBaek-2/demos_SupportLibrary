<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginBottom="10dp"
									android:layout_marginLeft="10dp"
									android:layout_marginRight="10dp"
									android:layout_marginTop="10dp">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/rlPrimaryTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="16dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:paddingTop="24dp">

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvPrimaryText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:text="title"
				android:textColor="@color/darkTextPrimary"
				android:textSize="24dp"/>

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvSubText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/tvPrimaryText"
				android:singleLine="false"
				android:text="description"
				android:textColor="@color/darkTextSecondary"
				android:textSize="14dp"/>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rlSupportingText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/rlPrimaryTitle"
			android:paddingBottom="16dp"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:paddingTop="0dp">

			<android.support.v7.widget.AppCompatTextView
				android:id="@+id/tvSupportingText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/darkTextPrimary"
				android:textSize="14sp"/>
		</RelativeLayout>
	</RelativeLayout>
</android.support.v7.widget.CardView>