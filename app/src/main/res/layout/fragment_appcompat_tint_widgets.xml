<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clickable="true">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:orientation="horizontal">
        <!-- row 0 -->
        <TextView
            android:text="TextView"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <android.support.v7.widget.AppCompatTextView
            android:text="AppCompatTextView"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <!-- row 1 -->
        <AutoCompleteTextView
            android:text="AutoCompleteTextView"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <android.support.v7.widget.AppCompatAutoCompleteTextView
            android:text="AppCompatAutoCompleteTextView"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <!-- row 2 -->
        <Button
            android:text="Button"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <android.support.v7.widget.AppCompatButton
            android:text="AppCompatButton"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <!-- row 3 -->
        <CheckBox
            android:text="CheckBox"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <android.support.v7.widget.AppCompatCheckBox
            android:text="AppCompatCheckBox"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <!-- row 4 -->
        <CheckedTextView
            android:text="CheckedTextView"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <android.support.v7.widget.AppCompatCheckedTextView
            android:text="AppCompatCheckedTextView"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="4" />

        <!-- row 5 -->
        <EditText
            android:text="EditText"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <android.support.v7.widget.AppCompatEditText
            android:text="AppCompatEditText"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="5" />

        <!-- row 6 -->
        <MultiAutoCompleteTextView
            android:text="MultiAutoCompleteTextView"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="6" />

        <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
            android:text="AppCompatMultiAutoCompleteTextView"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="6" />

        <!-- row 7 -->
        <RadioButton
            android:text="RadioButton"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="7" />

        <android.support.v7.widget.AppCompatRadioButton
            android:text="AppCompatRadioButton"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="7" />

        <!-- row 8 -->
        <RatingBar
            android:text="RatingBar"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="8" />

        <android.support.v7.widget.AppCompatRatingBar
            android:text="AppCompatRatingBar"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="8" />

        <!-- row 9 -->
        <Spinner
            android:text="Spinner"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="9" />

        <android.support.v7.widget.AppCompatSpinner
            android:text="AppCompatSpinner"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="9" />
    </android.support.v7.widget.GridLayout>
</ScrollView>