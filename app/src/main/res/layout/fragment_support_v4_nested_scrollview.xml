<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
											android:layout_width="match_parent"
											android:layout_height="match_parent"
											android:orientation="vertical">

	<LinearLayout
		android:id="@+id/llContent"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 0"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 1"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 2"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 3"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 4"
			android:textSize="30sp"/>


		<android.support.v4.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="@android:color/holo_blue_light"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 0"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 1"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 2"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 3"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 4"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 5"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 6"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 7"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView: 8"
					android:textSize="20sp"/>

				<android.support.v7.widget.AppCompatTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="This is child scrollView : 9"
					android:textSize="20sp"/>

			</LinearLayout>
		</android.support.v4.widget.NestedScrollView>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 5"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 6"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 7"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 8"
			android:textSize="30sp"/>

		<android.support.v7.widget.AppCompatTextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="This is parent scrollView : 9"
			android:textSize="30sp"/>
	</LinearLayout>
